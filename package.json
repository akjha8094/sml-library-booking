{
  "name": "sml-library-booking",
  "version": "1.0.0",
  "description": "Smart Library - Online Library Seat Booking System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "cd client && npm install && npm run build || echo 'Frontend build failed, continuing anyway'",
    "serve-pwa": "node serve-pwa.js",
    "postinstall": "cd client && npm install",
    "heroku-postbuild": "npm run build",
    "migrate": "node scripts/run-migrations.js"
  },
  "keywords": [
    "library",
    "booking",
    "seat-reservation",
    "mysql",
    "react",
    "nodejs",
    "express"
  ],
  "author": "Smart Library Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "mysql2": "^3.6.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "razorpay": "^2.9.2",
    "stripe": "^13.5.0",
    "nodemailer": "^6.9.5",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.1"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}